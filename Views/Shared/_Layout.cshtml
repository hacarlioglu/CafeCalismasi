﻿@using Amsterdam;
@using Amsterdam.Models;

@{
    DataModel dm = new DataModel();
    var list = new tblInfo();
    var cat = dm.tblCategory.Where(w=>w.IsActive==true).OrderBy(o => o.Number).Take(5).ToList();

    list = dm.tblInfo.FirstOrDefault();
}
<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/Menu/animate.css" rel="stylesheet" />
    <link href="~/Content/Menu/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Menu/flexslider.css" rel="stylesheet" />
    <link href="~/Content/Menu/icomoon.css" rel="stylesheet" />
    <link href="~/Content/Menu/style.css" rel="stylesheet" />
    <script src="~/Scripts/Menu/modernizr-2.6.2.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amsterdam Cafe</title>

</head>
<style>
 

    .imgIcon {
        width: 24px;
        height: 24px;
    }
</style>

<body>
    <div class="fh5co-loader"></div>
    <div id="page">
        <nav class="fh5co-nav" role="navigation">
            <!-- <div class="top-menu"> -->
            <div class="container">
                <div class="row">
                    <div class="col-xs-12 text-center logo-wrap">
                    </div>
                    <div class="col-xs-12 text-center menu-1 menu-wrap">
                        <ul>
                            <li class="active"><a href="/Amsterdam/Menu">Menü</a></li>
                            <li><a href="/Amsterdam/Contact">İletişim</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <!-- </div> -->
        </nav>
        <header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(/Asset/coffe.jpg);" data-stellar-background-ratio="0.5">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="display-t js-fullheight">
                            <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
                                <h1><em> Amsterdam Cafe</em></h1><br />
                                <h2> <em id="pageName">@ViewBag.Title</em> </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        @RenderBody()





        <footer id="fh5co-footer" role="contentinfo" class="fh5co-section">
            <div class="container">
                <div class="row row-pb-md">
                    <div class="col-md-4 fh5co-widget">
                        <h4>Amsterdam Cafe</h4>
                        <p>
                            <ul class="fh5co-social-icons">
                                <li><a href="https://www.instagram.com/cafeamsterdam/"><img class="imgIcon" height="24" width="24" src="/Asset/instagram.png" />İnstagram</a></li>
                            </ul>
                        </p>
                    </div>
                    <div class="col-md-2 col-md-push-1 fh5co-widget">
                        <h4>Menü</h4>
                        <ul class="fh5co-footer-links">
                            <li class="active"><a href="/Amsterdam/Menu">Menü</a></li>
                            <li><a href="/Amsterdam/Contact">İletişim</a></li>
                        </ul>
                    </div>

                    <div class="col-md-2 col-md-push-1 fh5co-widget">
                        <h4>Kategoriler</h4>
                        @foreach (var item in cat)
                        {
                            <ul class="fh5co-footer-links">
                                <li><a href="/Amsterdam/Product?@item.No">@item.Name</a></li>
                            </ul>
                        }

                    </div>
                    @if (list != null)
                    {
                        <div class="col-md-4 col-md-push-1 fh5co-widget">
                            <h4>İletişim</h4>
                            <ul class="fh5co-footer-links">
                                <li>
                                    @(list.Adress!=null? list.Adress:"")
                                    <br />
                                    @(list.Ilce != null? list.Ilce+"/":"") @(list.City!=null? list.City : "")
                                </li>
                                <li><a href="tel:// @(list.Phone!=null? list.Phone:"")">@(list.Phone!=null? list.Phone:"")</a></li>
                                <li><a href="mailto:@(list.Mail!=null? list.Mail : "")">@(list.Mail!=null? list.Mail : "")</a></li>
                            </ul>
                        </div>
                    }

                </div>

                <div class="row copyright">
                    <div class="col-md-12 text-center">
                        <p>
                            <small class="block">&copy; @DateTime.Now.Year.ToString() All Rights Reserved for harun.acarlioglu.27@gmail.com</small>
                        </p>

                    </div>
                </div>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/Menu/jquery.min.js"></script>
    <script src="~/Scripts/Menu/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/Menu/bootstrap.min.js"></script>
    <script src="~/Scripts/Menu/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/Menu/jquery.stellar.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Scripts/Admin/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/Menu/jquery.flexslider-min.js"></script>
    <script src="~/Scripts/Menu/main.js"></script>
</body>
</html>
