﻿@using Amsterdam;
@using Amsterdam.Models;
@model FindObject
@{
    DataModel dm = new DataModel();
    var list = dm.tblCategory.Where(w => w.IsActive == true).OrderBy(o => o.Number).ToList();
    int i = 0;
}
<style>
    img {
        float: left;
        width: 100%;
        height: 200px;
        background-size: cover;
    }
    .imgIcon {
        width: 24px;
        height: 24px;
    }
</style>

<div id="fh5co-featured-menu" class="fh5co-section">
    <div class="container">
        <div class="row">
            <h3 class="subTitle"><em>Kategoriler</em></h3>
        </div>
        <div class="row">
            @foreach (var item in list)
            {

                if (list.Count() > 4)
                {

                    <div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
                        @if (i % 2 == 0)
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                    </div>

                }

                else if (list.Count() > 2 && list.Count() == 4)
                {

                    <div class="col-md-6 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
                        @if (i % 2 == 0)
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                    </div>

                }
                else
                {

                    <div class="col-md-12 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
                        @if (i % 2 == 0)
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="fh5co-item animate-box">
                                <a href="/Amsterdam/Product?@item.No">
                                    @if (item.Image != null)
                                    {<img src=@("data:image/png;base64,"+ Convert.ToBase64String(item.Image, 0, item.Image.Length)) class="img-responsive" alt="@item.No.ToString()">}
                                    <h3>@item.Name</h3>
                                    <p>@item.Description</p>
                                </a>
                            </div>
                        }
                    </div>

                }
                i++;
            }
        </div>
    </div>
</div>

