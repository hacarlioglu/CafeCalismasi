﻿@using Amsterdam;
@using Amsterdam.Models;
@using Amsterdam.Helper;
@{
    Layout = "";
    Sessions.Bilgi = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Amsterdam Cafe</title>
    <link href="~/Content/Admin/sb-admin-2.min.css" rel="stylesheet" />
    <link href="~/Content/Admin/fontawesome-free/css/all.min.css" rel="stylesheet" />
</head>

<body class="bg-gradient-primary">
    <div class="container">
        <br /><br /> <br /><br /> <br /><br />
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                @using (Ajax.BeginForm("Login", "Admin", new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "post",
                    OnSuccess = "Sonuc",
                    OnFailure = "Hata()",
                }, new { enctype = "multipart/form-data" }
))
                {
                    @Html.AntiForgeryToken()
                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4">Amsterdam Cafe</h1>
                                        </div>
                                        <form class="user">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user"
                                                       name="userName"
                                                       placeholder="Kullanıcı Adnız">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user"
                                                       id="exampleInputPassword" name="password" placeholder="Şifreniz">
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                                Giriş
                                            </button>
                                            <hr>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

        </div>

    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.slim.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/Admin/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/Admin/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/Admin/sb-admin-2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</body>
<script type="text/javascript">


    function Sonuc(result) {
        if (result.Result == true) {
            window.open("/Admin/Category", "_blank")
        }
        else {
            $("#messmodelBody").load(result.Mess);
            $("#messModal").modal('show');
        }
    }

    function Hata() {
        $("#messmodelBody").load("<div><br/>Hata...</div>");
        $("#messModal").modal('show');
    }

</script>
</html>
